<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muhammad Habban"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        app:layout_constraintTop_toTopOf="@id/profileImage" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mhabban2004@gmail.com"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        app:layout_constraintTop_toBottomOf="@id/userName" />

    <ImageView
        android:id="@+id/editProfileIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_edit"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/profileImage" />

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Scan code -->
    <ImageView
        android:id="@+id/scanCodeIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_scan_code"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/profileImage" />

    <TextView
        android:id="@+id/scanCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan code"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/scanCodeIcon"
        app:layout_constraintTop_toTopOf="@id/scanCodeIcon" />

    <!-- Splitwise Pro -->
    <ImageView
        android:id="@+id/splitwiseProIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_splitwise_pro"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/scanCodeIcon" />

    <TextView
        android:id="@+id/splitwiseProText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Splitwise Pro"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/splitwiseProIcon"
        app:layout_constraintTop_toTopOf="@id/splitwiseProIcon" />

    <!-- Preferences Header -->
    <TextView
        android:id="@+id/preferencesHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferences"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splitwiseProIcon" />

    <!-- Email Settings -->
    <ImageView
        android:id="@+id/emailSettingsIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_email"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/preferencesHeader" />

    <TextView
        android:id="@+id/emailSettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email settings"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/emailSettingsIcon"
        app:layout_constraintTop_toTopOf="@id/emailSettingsIcon" />

    <!-- Notification Settings -->
    <ImageView
        android:id="@+id/notificationSettingsIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_notifications"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/emailSettingsIcon" />

    <TextView
        android:id="@+id/notificationSettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device and push notification settings"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/notificationSettingsIcon"
        app:layout_constraintTop_toTopOf="@id/notificationSettingsIcon" />

    <!-- Security -->
    <ImageView
        android:id="@+id/securityIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_lock"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/notificationSettingsIcon" />

    <TextView
        android:id="@+id/securityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/securityIcon"
        app:layout_constraintTop_toTopOf="@id/securityIcon" />

    <!-- Feedback Header -->
    <TextView
        android:id="@+id/feedbackHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/securityIcon" />

    <!-- Rate Splitwise -->
    <ImageView
        android:id="@+id/rateSplitwiseIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_star"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/feedbackHeader" />

    <TextView
        android:id="@+id/rateSplitwiseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Splitwise"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/rateSplitwiseIcon"
        app:layout_constraintTop_toTopOf="@id/rateSplitwiseIcon" />

    <!-- Contact Support -->
    <ImageView
        android:id="@+id/contactSupportIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_help"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rateSplitwiseIcon" />

    <TextView
        android:id="@+id/contactSupportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Splitwise support"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/contactSupportIcon"
        app:layout_constraintTop_toTopOf="@id/contactSupportIcon" />

    <!-- Log out -->
    <TextView
        android:id="@+id/logoutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contactSupportIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>